generator client {
  provider = "prisma-client-js"
  // output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Planet {
  pl_name         String  @id
  hostname        String
  pl_letter       String? 
  discoveryMethod String?
  disc_year       Int?
  pl_orbper       Float?
  pl_rade         Float?
  pl_bmasse       Float?
  pl_eqt          Float?
  pl_orbsmax      Float?
  pl_orbeccen     Float?
  pl_orbincl      Float?
  st_teff         Float?
  st_rad          Float?
  st_mass         Float?
  st_met          Float?
  st_age          Float?
  sy_dist         Float?
  imageUrl        String?
  updatedAt       DateTime @updatedAt @default(now())
}
